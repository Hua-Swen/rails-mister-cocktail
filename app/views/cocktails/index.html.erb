<div class="banner" style="background-image: url(https://images.pexels.com/photos/331107/pexels-photo-331107.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260)">
<%= cl_image_tag("logo_cocktailBar_minimalist",
      width: 300, height: 300, crop: :fill) %>
</div>


<div class="container">
  <div class="row row-cols-md-3 mt-5">
    <% @cocktails.each do |cocktail| %>
      <div class="col mb-4">
        <!-- <div class="card-full"> -->
          <%= link_to cocktail_path(cocktail), class: "card-full" do %>
            <!-- <%= cl_image_tag  cocktail.photo.key %> -->
            <!-- <div class="overlay"></div> -->
            <div class="card-category" style="background-image: url(<%= cl_image_path cocktail.photo.key %>)">
              <!-- <img class="card-img-top" src="<%= cocktail.image_url %>" alt="Card image cap"> -->
            <div class="card-text">
                <h5><%= cocktail.name %></h5>
            </div>
            </div>
          <% end %>
        <!-- </div> -->
      </div>
    <% end %>
  </div>
</div>

<div class="spacing-bottom"></div>
