<%= simple_form_for([@cocktail, @dose]) do |f| %>
  <%= f.error_notification %>
  <%= f.input :description %>
  <%= f.association :ingredient, collection: Ingredient.all.map {|u| [u.name, u.id]}, prompt: "Ingredients list" %>
  <%= f.button :submit, class: "btn btn-outline-secondary" %>
<% end %>

<%= link_to "Back to cocktail", cocktail_path(@cocktail), class: "btn btn-outline-secondary mt-4" %>

<%= link_to "Back to homepage", cocktails_path, class: "btn btn-outline-secondary mt-4" %>
