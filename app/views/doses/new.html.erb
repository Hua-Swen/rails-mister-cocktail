<%= simple_form_for([@cocktail, @dose]) do |f| %>
  <%= f.error_notification %>
  <%= f.input :description %>
  <%= f.association :ingredient, collection: Ingredient.all.map {|u| [u.name, u.id]}, prompt: "Ingredients list" %>
  <%= f.button :submit, class: "btn btn-outline-secondary" %>
<% end %>

<%= link_to cocktail_path(@cocktail), class: "btn btn-outline-secondary mt-4" do %>
Back to <strong><%= @cocktail.name %></strong>
<% end %>

